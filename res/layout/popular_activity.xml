<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/titlebar_bg" >

        <TextView
            android:id="@+id/forums_head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="流行"
            android:textColor="@color/white"
            android:textSize="22dp" />

        <Button
            android:id="@+id/popular_refrush"
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="20px"
            android:background="@drawable/title_confirm_b"
            android:text="@string/refrush"
            android:textColor="@color/white"
            android:textSize="12dp" />
    </FrameLayout>

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/popular_img01"
            android:layout_width="97dp"
            android:layout_height="97dp"
            android:layout_column="0"
            android:layout_gravity="center"
            android:layout_marginLeft="10px"
            android:layout_marginTop="10px"
            android:src="@drawable/forum_example" />

        <ImageView
            android:id="@+id/popular_img02"
            android:layout_width="97dp"
            android:layout_height="97dp"
            android:layout_column="1"
            android:layout_gravity="center"
            android:layout_marginLeft="10px"
            android:layout_marginTop="10px"
            android:src="@drawable/forum_example" />

        <ImageView
            android:id="@+id/popular_img03"
            android:layout_width="97dp"
            android:layout_height="97dp"
            android:layout_column="2"
            android:layout_gravity="center"
            android:layout_marginLeft="10px"
            android:layout_marginTop="10px"
            android:src="@drawable/forum_example" />

        <ImageView
            android:id="@+id/popular_img04"
            android:layout_width="97dp"
            android:layout_height="97dp"
            android:layout_column="0"
            android:layout_gravity="center"
            android:layout_marginLeft="10px"
            android:layout_marginTop="10px"
            android:src="@drawable/forum_example" />

        <ImageView
            android:id="@+id/popular_img05"
            android:layout_width="97dp"
            android:layout_height="97dp"
            android:layout_column="1"
            android:layout_gravity="center"
            android:layout_marginLeft="10px"
            android:layout_marginTop="10px"
            android:src="@drawable/forum_example" />

        <ImageView
            android:id="@+id/popular_img06"
            android:layout_width="97dp"
            android:layout_height="97dp"
            android:layout_column="2"
            android:layout_gravity="center"
            android:layout_marginLeft="10px"
            android:layout_marginTop="10px"
            android:src="@drawable/forum_example" />

        <ImageView
            android:id="@+id/popular_img07"
            android:layout_width="97dp"
            android:layout_height="97dp"
            android:layout_column="0"
            android:layout_gravity="center"
            android:layout_marginLeft="10px"
            android:layout_marginTop="10px"
            android:src="@drawable/forum_example" />

        <ImageView
            android:id="@+id/popular_img08"
            android:layout_width="97dp"
            android:layout_height="97dp"
            android:layout_column="1"
            android:layout_gravity="center"
            android:layout_marginLeft="10px"
            android:layout_marginTop="10px"
            android:src="@drawable/forum_example" />

        <ImageView
            android:id="@+id/popular_img09"
            android:layout_width="97dp"
            android:layout_height="97dp"
            android:layout_column="2"
            android:layout_gravity="center"
            android:layout_marginLeft="10px"
            android:layout_marginTop="10px"
            android:src="@drawable/forum_example" />

        <ImageView
            android:id="@+id/popular_img10"
            android:layout_width="97dp"
            android:layout_height="97dp"
            android:layout_column="0"
            android:layout_gravity="center"
            android:layout_marginLeft="10px"
            android:layout_marginTop="10px"
            android:src="@drawable/forum_example" />
    </GridLayout>

</LinearLayout>