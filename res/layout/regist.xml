<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/logo_bg"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/regist_img_id"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:src="@drawable/user_regist" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15px"
        android:layout_marginRight="15px"
        android:layout_marginTop="15px"
        android:orientation="horizontal" >

        <TextView
            style="@style/text_view"
            android:layout_width="0dp"
            android:layout_height="42dp"
            android:layout_weight="2"
            android:gravity="center_vertical|fill_horizontal"
            android:text="@string/regist_account" />

        <EditText
            android:id="@+id/regist_edtv_username"
            style="@style/edittextview_hight"
            android:layout_width="0dp"
            android:layout_weight="6" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15px"
        android:layout_marginRight="15px"
        android:layout_marginTop="15px"
        android:orientation="horizontal" >

        <TextView
            style="@style/text_view"
            android:layout_width="0dp"
            android:layout_height="42dp"
            android:layout_weight="2"
            android:gravity="center_vertical|fill_horizontal"
            android:text="@string/regist_password" />

        <EditText
            android:id="@+id/regist_edtv_password"
            style="@style/edittextview_hight"
            android:layout_width="0dp"
            android:layout_weight="6" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15px"
        android:layout_marginRight="15px"
        android:layout_marginTop="15px"
        android:orientation="horizontal" >

        <TextView
            style="@style/text_view"
            android:layout_width="0dp"
            android:layout_height="42dp"
            android:layout_weight="2"
            android:gravity="center_vertical|fill_horizontal"
            android:text="@string/regist_password_sure" />

        <EditText
            android:id="@+id/regist_edtv_password_sure"
            style="@style/edittextview_hight"
            android:layout_width="0dp"
            android:layout_weight="6" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15px"
        android:layout_marginRight="15px"
        android:layout_marginTop="15px"
        android:orientation="horizontal" >

        <TextView
            style="@style/text_view"
            android:layout_width="0dp"
            android:layout_height="42dp"
            android:layout_weight="2"
            android:gravity="center_vertical|fill_horizontal"
            android:text="@string/regist_name" />

        <EditText
            android:id="@+id/regist_edtv_name"
            style="@style/edittextview_hight"
            android:layout_width="0dp"
            android:layout_weight="6" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15px"
        android:layout_marginRight="15px"
        android:layout_marginTop="15px"
        android:orientation="horizontal" >

        <TextView
            style="@style/text_view"
            android:layout_width="0dp"
            android:layout_height="42dp"
            android:layout_weight="2"
            android:gravity="center_vertical|fill_horizontal"
            android:text="@string/regist_nickname" />

        <EditText
            android:id="@+id/regist_edtv_nickname"
            style="@style/edittextview_hight"
            android:layout_width="0dp"
            android:layout_weight="6" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15px"
        android:layout_marginRight="15px"
        android:layout_marginTop="15px"
        android:orientation="horizontal" >

        <TextView
            style="@style/text_view"
            android:layout_width="0dp"
            android:layout_height="42dp"
            android:layout_weight="2"
            android:gravity="center_vertical|fill_horizontal"
            android:text="@string/regist_email" />

        <EditText
            android:id="@+id/regist_edtv_email"
            style="@style/edittextview_hight"
            android:layout_width="0dp"
            android:layout_weight="6" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15px"
        android:layout_marginRight="15px"
        android:layout_marginTop="15px"
        android:orientation="horizontal" >

        <RadioGroup
            android:id="@+id/regist_radiogroup_sex"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                style="@style/text_view"
                android:layout_width="wrap_content"
                android:layout_height="42dp"
                android:gravity="center_vertical|fill_horizontal"
                android:text="@string/regist_sex" />

            <RadioButton
                android:id="@+id/regist_Radionbtn_m"
                style="@style/text_view"
                android:layout_width="0dp"
                android:layout_height="42dp"
                android:layout_marginLeft="10px"
                android:layout_weight="3"
                android:checked="true"
                android:text="@string/regist_sex_m" />

            <RadioButton
                android:id="@+id/regist_Radionbtn_w"
                style="@style/text_view"
                android:layout_width="0dp"
                android:layout_height="42dp"
                android:layout_weight="3"
                android:text="@string/regist_sex_w" />
        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/regist_btn_regist_start"
            style="@style/text_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15px"
            android:layout_marginRight="12px"
            android:layout_marginTop="15px"
            android:layout_weight="1"
            android:text="@string/regist_start" />
    </LinearLayout>

</LinearLayout>