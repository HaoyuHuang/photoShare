<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/titlebar_bg" >

        <Button
            android:id="@+id/go_upload_back"
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:layout_marginLeft="20px"
            android:background="@drawable/title_confirm_b"
            android:text="@string/back"
            android:textColor="@color/white"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/go_upload_head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="分享平台"
            android:textColor="@color/white"
            android:textSize="22dp" />

        <Button
            android:id="@+id/go_upload_share"
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="20px"
            android:background="@drawable/title_confirm_b"
            android:text="@string/share"
            android:textColor="@color/white"
            android:textSize="12dp" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:gravity="center"
        android:orientation="vertical" >

        <Button
            android:id="@+id/shareto_PS"
            style="@style/text_view"
            android:layout_width="236dp"
            android:layout_height="75dp"
            android:checked="true"
            android:gravity="center_vertical|fill_horizontal"
            android:background="@drawable/ps_s"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/shareto_xinlang"
            style="@style/text_view"
            android:layout_width="236dp"
            android:layout_height="75dp"
            android:layout_marginTop="60px"
            android:background="@drawable/xinlang"
            android:gravity="center_vertical|fill_horizontal"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/shareto_qq"
            style="@style/text_view"
            android:layout_width="236dp"
            android:layout_height="75dp"
            android:layout_marginTop="60px"
            android:background="@drawable/tengxun"
            android:gravity="center_vertical|fill_horizontal"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/shareto_renren"
            style="@style/text_view"
            android:layout_width="236dp"
            android:layout_height="75dp"
            android:layout_marginTop="60px"
            android:background="@drawable/renren"
            android:gravity="center_vertical|fill_horizontal"
            android:textColor="@color/black" />
    </LinearLayout>

</LinearLayout>